{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb-base",
    "plugin:jsdoc/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "google": "readonly",
    "GroupsApp": "readonly",
    "HtmlService": "readonly",
    "Logger": "readonly",
    "PropertiesService": "readonly",
    "QUnitGS2": "readonly",
    "ScriptApp": "readonly",
    "Session": "readonly",
    "SharedArrayBuffer": "readonly",
    "SpreadsheetApp": "readonly",
    "Utilities": "readonly",
    "eruda": "readonly",
    "GccApp": "readonly",
    "GccCache": "readonly",
    "GccCollection": "readonly",
    "GccColor": "readonly",
    "GccContainer": "readonly",
    "GccEnv": "readonly",
    "GccPage": "readonly",
    "GccRun": "readonly",
    "GccRunGroup": "readonly",
    "GccSheet": "readonly",
    "GccTest": "readonly",
    "GccUser": "readonly",
    "GccUtils": "readonly",
    "GccValidate": "readonly",
    "GccUi": "readonly",
    "GccUiCollection": "readonly",
    "GccUiCss": "readonly",
    "GccUiDialog": "readonly",
    "GccUiLoader": "readonly",
    "GccUiRun": "readonly",
    "GccUiRunForm": "readonly",
    "GccUiSelectDisclosure": "readonly",
    "GccUiSelectForm": "readonly",
    "GsheetCompostCollections": "readonly",
    "gccIntegrationTests": "readonly",
    "pubsub": "readonly",
    "cbConfig": "readonly",
    "devConfig": "readonly",
    "saConfig": "readonly",
    "gccInit": "readonly",
    "sinon": "readonly",
    "QUnit": "readonly"
  },
  "ignorePatterns": [
    "node_modules/"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": [
    "html",
    "jsdoc"
  ],
  "rules": {
    "array-bracket-spacing": [
      "error",
      "always"
    ],
    "block-spacing": [
      "error",
      "always"
    ],
    "class-methods-use-this": [
      "off"
    ],
    "comma-spacing": [
      "error"
    ],
    "func-names": [
      "warn",
      "as-needed"
    ],
    "indent": [
      "warn",
      2
    ],
    "max-len": [
      "error",
      {
        "code": 120,
        "ignoreUrls": true,
        "ignoreComments": true,
        "ignoreRegExpLiterals": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "no-alert": [
      "off"
    ],
    "no-param-reassign": [
      "warn",
      {
        "props": false
      }
    ],
    "no-underscore-dangle": "off",
    "no-unused-vars": [
      "warn", 
      {
        "varsIgnorePattern": "^doGet|[gG]cc|(test|trigger)"
      }
    ],
    "no-unused-expressions": 0,
    "no-use-before-define": [
      "warn",
      {
        "functions": false,
        "variables": true
      }
    ],
    "valid-typeof": [
      "off"
    ]
  },
  "settings": {
    "html/html-extensions": [".html", ".js.html"]
  }
}